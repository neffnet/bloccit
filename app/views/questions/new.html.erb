<h1>New Question</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for questions</p>
    <ul>
      <li>Make sure it is a question, duh</li>
      <li>Use whatever letters you want.</li>
      <li>Hashtags get you banned!</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @question do |q| %>
      <div class="form-group">
        <%= q.label :title %>
        <%= q.text_field :title,class:"form-control",placeholder:'Enter question title' %>
      </div>
      <div class="form-group">
        <%= q.label :body %>
        <%= q.text_area :body, rows: 8, class: 'form-control', placeholder: 'Enter question body' %>
        <%= q.label :resolved %>
        <%= check_box(@question, :resolved) %>
      </div>
      <div class="form-group">
        <%= q.submit 'Save', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>