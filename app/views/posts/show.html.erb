<h1><%= markdown_to_html @post.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= markdown_to_html @post.body %></p>

    <div class="comments">
      <% if @comments.any? %>
        <h3>Comments about this post:</h3>
        <%= render @comments %>
      <% else %>
        <h3>No comments on this post yet</h3>
      <% end %>
    </div>

    <% if policy(Comment.new).new? %>
      <div class="add-comment">
        <%= render './comments/form', {topic:@topic,post:@post,comment:Comment.new} %>
      </div>
    <% end %>
  </div>

  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic,@post), class:'btn btn-success' %>
    <% end %>
  </div>
</div>