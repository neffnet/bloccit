<h1><%= markdown_to_html @post.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= markdown_to_html @post.body %></p>
    
  <!-- show post image -->
  <p>Attached image:</p>
  <% if @post.image? %>
    <%= image_tag(@post.image.url) %>
  <% else %>
    <span>no image</span>
  <% end %>
</div>

  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic,@post), class:'btn btn-success' %>
  <% end %>