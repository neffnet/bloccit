<h1>Edit Summary</h1>

<div class="row">

  <div class="col-md-8">
    <%= form_for [@topic,@post,@summary], url: topic_post_summary_path(@topic,@post) do |f| %>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_field :body,class:"form-control",placeholder:'Enter your summary here' %>
      </div>
      
      <div class="form-group">
        <%= f.submit 'Save', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>